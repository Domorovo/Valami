<body>
    <div class="container">
        <h2>Bejelentkezés</h2>
        <form id="loginForm">
            <div class="form-group">
                <label for="loginUsername">Felhasználónév</label>
                <input type="text" id="loginUsername" required>
            </div>
            <div class="form-group">
                <label for="loginPassword">Jelszó</label>
                <input type="password" id="loginPassword" required>
            </div>
            <button type="button" class="button" onclick="login()">Bejelentkezés</button>
        </form>
        
        <div class="social-buttons">
            <button class="social-button google" onclick="loginWithGoogle()">Google</button>
            <button class="social-button facebook" onclick="loginWithFacebook()">Facebook</button>
            <button class="social-button apple" onclick="loginWithApple()">Apple</button>
        </div>

        <div class="chat-container" id="chatContainer">
            <h2>Chat</h2>
            <div class="chat-box" id="chatBox"></div>
            <div class="form-group">
                <textarea id="messageInput" placeholder="Írj egy üzenetet..."></textarea>
            </div>
            <button type="button" class="button" onclick="sendMessage()">Küldés</button>
        </div>
    </div>

    <script>
        let users = [];
        let currentUser = null;

        function login() {
            const username = document.getElementById("loginUsername").value;
            const password = document.getElementById("loginPassword").value;
            currentUser = { username };
            document.getElementById("loginForm").style.display = "none";
            document.getElementById("chatContainer").style.display = "block";
            alert("Sikeres bejelentkezés: " + username);
        }

        function loginWithGoogle() {
            alert("Google bejelentkezés funkció itt implementálható.");
            // Google login SDK-val
        }

        function loginWithFacebook() {
            alert("Facebook bejelentkezés funkció itt implementálható.");
            // Facebook login SDK-val
        }

        function loginWithApple() {
            alert("Apple bejelentkezés funkció itt implementálható.");
            // Apple login SDK-val
        }

        function sendMessage() {
            const messageInput = document.getElementById("messageInput");
            const messageText = messageInput.value.trim();
            if (messageText) {
                const chatBox = document.getElementById("chatBox");
                const messageDiv = document.createElement("div");
                messageDiv.classList.add("chat-message");
                messageDiv.innerText = currentUser.username + ": " + messageText;
                chatBox.appendChild(messageDiv);
                messageInput.value = "";
                chatBox.scrollTop = chatBox.scrollHeight;
            }
        }
    </script>

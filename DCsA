        .social-buttons { display: flex; justify-content: space-between; margin-top: 10px; }
        .social-button { width: 48%; padding: 10px; border: none; cursor: pointer; font-size: 16px; color: white; border-radius: 5px; display: flex; align-items: center; justify-content: center; }
        .google { background-color: #db4437; }
